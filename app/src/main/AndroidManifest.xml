<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.miniventilator">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MiniVentilator">
        <activity
            android:name=".splashscreen"
            android:theme="@style/splashtheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".doctor.DeletePatient"
            android:parentActivityName=".doctor.DoctorDashboard" />
        <activity android:name=".SensorValues" />
        <activity
            android:name=".patient.ViewInstructions"
            android:parentActivityName=".patient.PatientDashboard" />
        <activity
            android:name=".doctor.AddInstructions"
            android:parentActivityName=".doctor.DoctorDashboard" />
        <activity
            android:name=".doctor.DoctorProfile"
            android:parentActivityName=".doctor.DoctorDashboard" />
        <activity
            android:name=".patient.PatientProfile"
            android:parentActivityName=".patient.PatientDashboard" />
        <activity
            android:name=".patient.PatientDashboard"
            android:parentActivityName=".patient.PatientLogin" />
        <activity
            android:name=".doctor.DoctorDashboard"
            android:parentActivityName=".doctor.Doctorlogin" />
        <activity
            android:name=".doctor.DoctorSignup"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".patient.PatientSignup"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".doctor.Doctorlogin"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".patient.PatientLogin"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>